{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "lib",
    "declaration": true,
    "sourceMap": true,
    "lib": ["ES2020", "DOM"],
    "typeRoots": ["node_modules/@types"],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "examples/**/*"],
  "exclude": ["node_modules", "lib"]
}
